# Django Core Settings
# ------------------------------------------------------------------------------
# WARNING: In production, set DEBUG to False.
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-super-secret-key-for-development
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
DJANGO_LANGUAGE_CODE=en-us
DJANGO_TIME_ZONE=UTC

# Security Settings (defaults are for development, review for production)
# ------------------------------------------------------------------------------
DJANGO_SECURE=False
DJANGO_HSTS_SECONDS=0
DJANGO_CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# PostgreSQL Database Settings
# ------------------------------------------------------------------------------
# These defaults match the docker-compose.yml setup.
POSTGRES_HOST=127.0.0.1
POSTGRES_DB=crm_db
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=crm_password
POSTGRES_PORT=5432
# Set to 0 to have unlimited persistent connections.
DJANGO_DB_CONN_MAX_AGE=0

# Django REST Framework Settings
# ------------------------------------------------------------------------------
DRF_PAGE_SIZE=20
